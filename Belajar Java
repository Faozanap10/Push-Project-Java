//Practice Else Statement
int number = 7;
if (number > 10) {
    System.out.println("I Love Programming");
}    
else{
    System.out.print("Im Still Love Programming");
}    

//Practice If Else Statement
int number = 25;
if(number < 10){
    System.out.println("I Love Programming");}
else if (number < 20){
    System.out.println("I Love Programming 2nd");
    }
else{
    System.out.println("I Still Love Programming")
    }

//Practice Cheatsheet
int number = 50;

String hello = (number < 15) ? "Hello" : "Not Hello";

System.out.println(hello);

//Practice switch case   
System.out.print("Masukan teks : ");
Scanner inputan = new Scanner(System.in);
String hasil = inputan.nextLine();
        
switch (hasil){
case "1":
System.out.println("Hello World");
break;
case "2":
System.out.println("faozan is Adorable");
break;
default:
System.out.println("No Option!");
break;
}

//Practice Switch is similiar if
System.out.print("Masukan teks : ");
Scanner scan = new Scanner(System.in);
String words = scan.nextLine();
        
if(words.equals("1")){
System.out.println("Hello World");
}
else if(words.equals("2")){
System.out.println("Faozan is Adorable");
}
else{
System.out.println("No Option!");
}

//Practice SIMPLY TASK
System.out.print("Masukan teks: ");
Scanner result = new Scanner(System.in);
int input = result.nextInt();

if(input < 10){
    System.out.println("under 10!");}
else if(input <= 31){
    System.out.println("above 10 and under 30!");}
else{
    System.out.println("Above 31");}

//Practice Looping for 
int max = 100;
for (int i = 0; i < max; i++){
    System.out.println("i");

//Practice Looping Foreach
int arr[]= {3, 1, 2, 5, 4};

for (int i = 0; i < arr.length; i++){
    System.out.println(arr[i]);
}

String words[] = {"Hello","World","Faozan","is","Adorable"};

for (String word : words){
    System.out.println(word);
}

//Practice Looping While Do
int max = 10;
int i = 0;
while(i < max){
     System.out.println("Hello World");
     i++;
}

//Looping DO While
int max = 10;
int x = 0;
do{
    System.out.println("Hello World");
    x++;
}while(x < max);    
